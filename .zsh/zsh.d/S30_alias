# Nice colors
alias ls='ls --color=auto --hide="*.pyc"'
alias grep="grep --color"

# restore X env
alias restore_x_env="source /tmp/restore_x_env"

# security measures
alias cp="cp -i"
alias mv="mv -i"
alias rm="rm -i"

# tmux 256 colors
alias tmux="tmux -2"

# Not an alias, but what the hell
function mkcdir(){
    mkdir $1
    cd $1
}

# vimwiki
alias wiki="cd ~/vimwiki/; git pull; nvim +VimwikiIndex; git add .; git commit -a; git push; cd -"

# Neovim
alias vim=nvim
alias vimdiff="nvim -d"
